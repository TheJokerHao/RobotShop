<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/color_title_bg"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_margin30dp"
    android:paddingRight="@dimen/common_margin30dp">

    <LinearLayout
        android:id="@+id/llyt_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:paddingLeft="@dimen/common_margin10dp"
            android:paddingRight="@dimen/common_margin10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back" />


        <TextView
            android:id="@+id/tv_back_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin10dp"
            android:text="@string/common_back"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_search_back_font_size"
             />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/common_back"
        android:textColor="@color/color_white"
        android:textSize="@dimen/common_title_size" />

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin20dp"
        android:src="@drawable/search" />
</RelativeLayout>